/**index.wxss**/
page{
   width: 100%;
  height: 100%;
  overflow: hidden;
}
.container{
    width : 100%;
    height : 100%;
    position: relative;
}
.container .backimg{
    height: 100%;
    width: 100%;
    /*图片采用绝对定位，三张图片是重叠的*/
    position: absolute;
    top:0;
    left: 0;
    /*初始不透明度为0，都看不见*/
    opacity: 0;
    /*设置线性渐变*/
    transition:opacity 0.8s linear;
}
.container image.active_img{
 /*透明度设置成1*/
  opacity:1;
}
.container .trangle{
  position: absolute;
  opacity: 1;
  top:0;
  bottom:0;
}
.logo{
  position:absolute;
  top:100px;
  left:50%;
  transform: translateX(-50%);
  width: 150rpx;
  height:150rpx;
  opacity: 85%;
}
#slogan{
  position:absolute;
  width:100%;
  top:220px;
  left:0;
  font-family: Microsoft YaHei;
  color: white;
  text-align: center;
  font-size: 20px
}

#bordercircle{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  background-color: rgba(37, 159, 255, 0.3);
  text-align: center;
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  z-index: 3
}

#incircle{
  width: 110rpx;
  height:110rpx;
  border-radius: 50%;
  background-color: #30ffeb;
  position: relative
}
#incircle cover-image{
  width:50rpx;
  height: 40rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

#historybtn{
width: 100%;
position: absolute;
bottom:10%;
left: 0;
text-align: center;
color: white;
font-family: Microsoft YaHei;
font-weight: bolder;
font-size: 18px;

}
#historybtn text{
  padding-bottom: 6px;
  border-bottom: #30ffeb solid 2px;
  padding-top:50px;
  z-index: 10;
}

/*探索页面相关样式*/
#circleselect{
  position: absolute;
  bottom: 10%;
  left:0;
  width: 750rpx;
  height:550rpx;
  opacity: 0;
}
.start_text{
  position: absolute;
  top:30%;
  left: 0;
  width: 100%;
  text-align: center;
  color: white;
  font-family: Microsoft YaHei;
  font-size: 22px;
  font-weight: bolder;
  opacity: 0;
  transition: opacity 1s linear; 
}
.show{
  opacity: 1;
}

/*探索页面圆弧上面的按钮*/
.searchBtn{
  opacity: 1;
  transition: opacity linear 1s;
  color:white;
  text-align: center;
  font-size: 10px;
  z-index: 3;
}
.searchBtn image{
   width:70rpx;
   height:60rpx;
}
.searchLeft{
  position:absolute;
  bottom:33%;
  left:20%;
}
.searchLeft image{
  margin-bottom: 3px;
}
.searchRight{
   position:absolute;
   bottom:33%;
   right:20%;
}
.searchRight{
  margin-bottom:2px;
}